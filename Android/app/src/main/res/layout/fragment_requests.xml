<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_requests"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ask.ask.MyProfileFragment">

    <TextView
        android:id="@+id/textViewNoRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/noRequestsMade"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ExpandableListView
        android:id="@+id/expandableListViewRequests"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" ></ExpandableListView>

</FrameLayout>