<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--imageViewButtonGoToHome-->
    <ImageView
        android:id="@+id/imageViewButtonGoToHome"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_home"
        android:text="Home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewConfirmationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-thin"
        android:text="It's a Match!"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageViewButtonGoToMessaging"
        app:layout_constraintStart_toEndOf="@+id/imageViewButtonGoToHome"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewButtonGoToMessaging"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_message"
        android:text="Message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutRequester"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/linearLayoutProvider"
        app:layout_constraintTop_toBottomOf="@+id/textViewConfirmationTitle">

        <TextView
            android:id="@+id/textViewRequesterName"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Requester Name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageViewRequesterImage"
            android:layout_width="@dimen/imageViewSizeOfferAccepted"
            android:layout_height="@dimen/imageViewSizeOfferAccepted"
            app:civ_border_color="#FFFF"
            app:civ_border_width="2dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewRequesterName" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutProvider"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/linearLayoutRequester"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewConfirmationTitle">

        <TextView
            android:id="@+id/textViewProviderName"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Provider Name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageViewProviderImage"
            android:layout_width="@dimen/imageViewSizeOfferAccepted"
            android:layout_height="@dimen/imageViewSizeOfferAccepted"
            app:civ_border_color="#FFFF"
            app:civ_border_width="2dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewProviderName" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/backgroundgradient"
        android:text="Item Name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutRequester" />

    <ImageView
        android:id="@+id/imageViewItemImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/requestOfferImageHeight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewItemName"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>